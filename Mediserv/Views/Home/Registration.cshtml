@model Mediserv.Models.Users
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Latest.cshtml";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Register</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->

@using (Html.BeginForm("Registration", "Home"))
{
    @Html.AntiForgeryToken();

    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Register</h2>
                        <form action="#">
                            <div class="group-input">
                                @*<label for="username">Username or email address *</label>
                                 <input type="text" id="username">*@

                                @Html.TextBoxFor(x => x.UserName, new { @style = "     border: 1px solid #ebebeb;height: 50px;width: 100%; padding-left: 20px; padding-right: 15px;  ", @name = "UserName", id = "your_name", placeholder = "Your Name" })
                                <span>
                                    @Html.ValidationMessageFor(x => x.UserName)
                                </span>

                            </div>

                            <div class="group-input">
                                @*<label for="username">Username or email address *</label>
                                 <input type="text" id="username">*@

                                @Html.TextBoxFor(x => x.Email, new { @style = "     border: 1px solid #ebebeb;height: 50px;width: 100%; padding-left: 20px; padding-right: 15px;  ", @name = "Email", id = "email", placeholder = "Your Email" })
                                <span>
                                    @Html.ValidationMessageFor(x => x.Email)
                                </span>

                            </div>
                            <div class="group-input">
                                @*<label for="pass">Password *</label>
                                 <input type="text" id="pass">*@
                                @Html.PasswordFor(x => x.Password, new { @style = "     border: 1px solid #ebebeb;height: 50px;width: 100%; padding-left: 20px; padding-right: 15px;  " ,@name = "Password", id = "pass", placeholder = "Password" })
                                <span>
                                    @Html.ValidationMessageFor(x => x.Password)
                                </span>
                            </div>
                            <div class="group-input">
                                     @*<label for="con-pass">Confirm Password *</label>
                                    <input type="text" id="con-pass">*@
                                @Html.PasswordFor(x => x.RPassword, new { @style = "     border: 1px solid #ebebeb;height: 50px;width: 100%; padding-left: 20px; padding-right: 15px;  ", @name = "RPassword", id = "re_pass", placeholder = "Repeat your password" })
                                <span>
                                     @Html.ValidationMessageFor(x => x.RPassword)
                                 </span>
                            </div>
                            <button type="submit" class="site-btn register-btn">REGISTER</button>
                        </form>
                        <div class="switch-login">
                            <a href="./login.html" class="or-login">Or Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

<!-- Register Form Section End -->
